<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#FFFFFF" /> <!-- Background color of the bubble -->
    <corners android:radius="16dp" /> <!-- Rounded corners -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3" /> <!-- Optional border -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
