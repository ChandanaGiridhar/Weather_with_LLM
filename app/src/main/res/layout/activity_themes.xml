<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemeActivity">

    <!-- Title for theme selection screen -->
    <TextView
        android:id="@+id/theme_selection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Theme"
        android:textSize="24sp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Theme 1 Button -->
    <Button
        android:id="@+id/buttonTheme1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android Default Theme"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/theme_selection_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Theme 2 Button -->
    <Button
        android:id="@+id/buttonTheme2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Orange Green Theme"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/buttonTheme1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Theme 3 Button -->
    <Button
        android:id="@+id/buttonTheme3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blue Red Theme"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/buttonTheme2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
    
</androidx.constraintlayout.widget.ConstraintLayout>
